{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    // "moduleResolution": "Node16",
    "module": "commonjs",
    "target": "es2016",
    "rootDir": "./src/",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "build"]
}
